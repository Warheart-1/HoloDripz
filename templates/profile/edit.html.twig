{% extends 'base.html.twig' %}

{% block title %}Edit User{% endblock %}

{% block body %}
 {{ include('navbar.html.twig') }}

    <div class=" flex flex-col align-middle items-center justify-center">
        {{form_start(form)}}
            <h1 class="text-3xl">Edit User</h1>
            <div class="flex flex-col">
                <div class="flex flex-row">
                    {{form_label(form.name)}}
                </div>
                <div class="flex flex-row">
                    {{form_widget(form.name, {'attr': {'class': 'form-control border border-sky-500 rounded-md'}})}} 
                </div>
                <div class="flex flex-row">
                    {{form_label(form.lastname)}}
                </div>
                <div class="flex flex-row">
                    {{form_widget(form.lastname, {'attr': {'class': 'form-control border border-sky-500 rounded-md'}})}}
                </div>
                <div class="flex flex-row">
                    {{form_label(form.email)}}
                </div>
                <div class="flex flex-row">
                    {{form_widget(form.email, {'attr': {'class': 'form-control border border-sky-500 rounded-md'}})}}
                </div>
                <div class="flex flex-row">
                    {{form_label(form.phoneNumber)}}
                </div>
                <div class="flex flex-row">
                    {{form_widget(form.phoneNumber, {'attr': {'class': 'form-control border border-sky-500 rounded-md'}})}}
                </div>
                <div class="flex flex-row">
                    {{form_label(form.address)}}
                </div>  
                <div class="flex flex-row">
                    {{form_widget(form.address, {'attr': {'class': 'form-control border border-sky-500 rounded-md'}})}}
                </div>
                <div class="flex flex-row">
                    {{form_label(form.country)}}
                </div>
                <div class="flex flex-row">
                    {{form_widget(form.country, {'attr': {'class': 'form-control border border-sky-500 rounded-md'}})}}
                </div>
                <div class="flex flex-row">
                    {{form_label(form.postalCode)}}
                </div>
                <div class="flex flex-row">
                    {{form_widget(form.postalCode, {'attr': {'class': 'form-control border border-sky-500 rounded-md'}})}}
                </div>
            </div>
            <button class="btn btn-primary">Save</button>

        {{form_end(form)}}
    </div>
    <a href="{{ path('app_users_index') }}">back to list</a>


{% endblock %}
